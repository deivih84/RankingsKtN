<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layoutpadreBotones"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#F88062"
                android:fontFamily="@font/comfortaa"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="4dp"
                android:insetBottom="8dp"
                android:onClick="funcion"
                android:text="Crear\nRanking"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="24sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"
                app:iconPadding="8dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#F88062"
                android:insetLeft="4dp"
                android:insetTop="8dp"
                android:insetRight="4dp"
                android:insetBottom="8dp"
                android:text="Ver Rankings"
                app:cornerRadius="30dp"
                app:iconPadding="8dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#F88062"
                android:insetLeft="4dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="A?"
                app:cornerRadius="30dp"
                app:iconPadding="8dp" />

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textoEjemplo"
            android:layout_width="match_parent"
            android:layout_height="401dp"
            android:fontFamily="@font/comfortaa"
            android:text="Texto loco\nde ejemplo\n\nMACARRONES"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold"
            android:typeface="normal" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>